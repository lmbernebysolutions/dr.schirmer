{
  "name": "dr-schirmer-website",
  "version": "1.0.0",
  "description": "Moderne Praxis-Website für Dr. med. Lars Schirmer - Facharzt für Allgemeinmedizin",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "export": "next build && next export",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "analyze": "ANALYZE=true next build",
    "lighthouse": "lighthouse http://localhost:3000 --output html --output-path ./performance/lighthouse/report.html",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:website": "node scripts/test-website.js",
    "test:all": "npm run test:website && npm run lighthouse",
    "deploy": "chmod +x deployment/deploy.sh && ./deployment/deploy.sh",
    "prepare": "husky install"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.3.2",
    "@notionhq/client": "^5.3.0",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "@types/compression": "^1.7.5",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@vis.gl/react-google-maps": "^1.6.1",
    "autoprefixer": "^10.4.16",
    "clsx": "^2.0.0",
    "compression": "^1.7.4",
    "critters": "^0.0.23",
    "framer-motion": "^10.18.0",
    "i18next": "^25.6.0",
    "imagemin": "^8.0.1",
    "imagemin-webp": "^8.0.0",
    "lucide-react": "^0.303.0",
    "next": "^14.0.4",
    "postcss": "^8.4.32",
    "react": "^18.2.0",
    "react-cookie-manager": "^4.0.3",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.48.2",
    "react-i18next": "^16.2.0",
    "tailwind-merge": "^2.2.0",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.3.3",
    "zod": "^3.22.4",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^14.0.4",
    "@testing-library/jest-dom": "^6.1.6",
    "@testing-library/react": "^14.1.2",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "eslint-config-next": "^14.0.4",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lighthouse": "^11.6.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "prettier-plugin-tailwindcss": "^0.5.9",
    "sharp": "^0.34.4"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
